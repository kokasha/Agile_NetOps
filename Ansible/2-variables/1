- name: Play to execute a command
  hosts: junos
  connection: local
  gather_facts: yes
  tasks:
  - name: show version on JunOS
    junos_command:
        display: xml
        commands:
        - show version
        - show arp
        display: text
        provider:
         port: 22
         host: "{{ansible_host}}"
         username: "{{ansible_user}}"
         password: "{{ansible_ssh_pass}}"
    register: junos_output

  - name: Print Output
    debug: var=junos_output
